pipeline {
    environment {
        registry = "vmehdighoumrane/job2tp4"
        registryCredential = 'docker-bbdc'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/ghoumrane/job2tp4.git'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    echo "Tests passed"
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    docker.withRegistry('', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy image') {
            steps {
                script {
                    sh "docker run -d -p 8080:80 $registry:$BUILD_NUMBER"
                }
            }
        }
    }
}
